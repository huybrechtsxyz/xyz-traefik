{
  "service": {
    "id": "traefik",
    "name": "Traefik",
    "description": "Reverse proxy and load balancer for microservices",
    "paths": [
      { "type": "config", "path":"", "chmod": 755 },
      { "type": "config", "path":"etc", "chmod": 755 },
      { "type": "data", "path":"", "chmod": 600 },
      { "type": "logs", "path":"", "chmod": 777 }
    ],
    "deploy": {
      "priority": 1,
      "groups": ["infra"],
      "serverrole": "manager",
      "endpoint": "http://traefik.${DOMAIN_DEV}/dashboard/"
    },
    "addresses": [
      {
        "address": "traefik",
        "port": 8080
      }
    ],
    "checks": [
      {
        "id": "traefik-http-check",
        "name": "Traefik HTTP Health Check",
        "http": "http://traefik:8080/ping",
        "interval": "60s",
        "timeout": "15s"
      }
    ],
    "meta": {
      "traefik_path": "/ping"
    },
    "tags":[ "traefik","proxy","docker-swarm","system" ]
  }
}